<nav class="navbar navbar-dark bg-dark">
<% if user_signed_in? %>
<div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <%= link_to "Food", foods_path, class: "navbar-item #{current_page?(foods_path) ? "is-active" : ""}" %>
        <%= link_to "My Recipes", recipes_path, class: "navbar-item #{current_page?(recipes_path) ? "is-active" : ""}" %>
        <%= link_to "Public Recipes", public_recipes_path, class: "navbar-item" %>
