<div>
  <ul>
    <% @recipes.each do |r| %>
    <li class="border border-2 border-primary container mt-5 rounded bio">
      <div class="d-flex p-3">
        <div class="r-name">
          <%= link_to recipe_path(r.id), id: "recipe_path#{r.id}" do %>
          <h4><%= r.name%></h4>
          <% end %>
          <div>
            <%= button_to "Delete", recipe_path(r.id), method: :delete, data: {disable_with: "Deleting..."}, class: "btn btn-primary btn-floating mx-1 d-btn"%>
          </div>
        </div>
        <div>
          <p><%= r.description%></p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>